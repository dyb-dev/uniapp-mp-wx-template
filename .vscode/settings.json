    // #endregion

    // #region CODE: Code Spell Checker 插件配置

    "cSpell.userWords": [
        "autofetch",
        "axios",
        "Cacheable",
        "camelcase",
        "crossorigin",
        "deepmerge",
        "docthis",
        "echarts",
