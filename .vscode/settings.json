    // #endregion

    // #region CODE: Image Preview 插件配置

    // 解析引用的资源
    "gutterpreview.enableReferenceLookup": true,
    // 引用路径映射
    "gutterpreview.paths": {
        "/static": "src/static",
        "/subPackages": "src/subPackages"
    },

    // #endregion

    // #region CODE: CSS Peek 插件配置

    "cssPeek.peekToExclude": ["**/node_modules/**", "**/bower_components/**", "**/.history/**"]

    // #endregion
}
